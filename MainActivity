package atlassem4project.popup;

import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.content.SharedPreferences;
import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;

public class MainActivity extends Activity {


    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        SharedPreferences pref = getSharedPreferences("ActivityPREF", Context.MODE_PRIVATE);
        if (pref.getBoolean("activity_executed", false)) {
            Intent intent = new Intent(this, Vlees.class);
            startActivity(intent);
            finish();
        } else {
            SharedPreferences.Editor ed = pref.edit();
            ed.putBoolean("activity_executed", true);
            ed.apply();
        }
        final Button btnmeatplus = (Button) findViewById(R.id.btnmeatplus);
        final Button btnmeat = (Button) findViewById(R.id.btnmeat);
        final Button btnvegetarian = (Button) findViewById(R.id.btnvegetarian);
        final Button btnvegan = (Button) findViewById(R.id.btnvegan);


        OnClickListener onClickListener = new OnClickListener() {
            @Override
            public void onClick(final View v) {
                if (v.equals(btnmeatplus)) {
                    SharedPreferences pref = getSharedPreferences("meatPREF", Context.MODE_PRIVATE);
                    SharedPreferences.Editor ed = pref.edit();
                    ed.putBoolean("pref_meatplus", true);
                    ed.apply();
                    ed.putBoolean("pref_meat", false);
                    ed.apply();
                    ed.putBoolean("pref_vegetarian", false);
                    ed.apply();
                    ed.putBoolean("pref_vegan", false);
                    ed.apply();
                    Intent intent = new Intent(MainActivity.this, Vlees.class);
                    startActivity(intent);
                }
                if (v.equals(btnmeat)) {
                    SharedPreferences pref = getSharedPreferences("meatPREF", Context.MODE_PRIVATE);
                    SharedPreferences.Editor ed = pref.edit();
                    ed.putBoolean("pref_meat", true);
                    ed.apply();
                    ed.putBoolean("pref_meatplus", false);
                    ed.apply();
                    ed.putBoolean("pref_vegetarian", false);
                    ed.apply();
                    ed.putBoolean("pref_vegan", false);
                    ed.apply();
                    Intent intent = new Intent(MainActivity.this, Vlees.class);
                    startActivity(intent);
                }

                if (v.equals(btnvegetarian)) {
                    SharedPreferences pref = getSharedPreferences("meatPREF", Context.MODE_PRIVATE);
                    SharedPreferences.Editor ed = pref.edit();
                    ed.putBoolean("pref_vegetarian", true);
                    ed.apply();
                    ed.putBoolean("pref_meatplus", false);
                    ed.apply();
                    ed.putBoolean("pref_meat", false);
                    ed.apply();
                    ed.putBoolean("pref_vegan", false);
                    ed.apply();
                    Intent intent = new Intent(MainActivity.this, Vlees.class);
                    startActivity(intent);

                }
                if (v.equals(btnvegan)) {
                    SharedPreferences pref = getSharedPreferences("meatPREF", Context.MODE_PRIVATE);
                    SharedPreferences.Editor ed = pref.edit();
                    ed.putBoolean("pref_vegan", true);
                    ed.apply();
                    ed.putBoolean("pref_meatplus", false);
                    ed.apply();
                    ed.putBoolean("pref_meat", false);
                    ed.apply();
                    ed.putBoolean("pref_vegetarian", false);
                    ed.apply();
                    Intent intent = new Intent(MainActivity.this, Vlees.class);
                    startActivity(intent);

                }


            }

            ;
        };
        btnmeatplus.setOnClickListener(onClickListener);
        btnmeat.setOnClickListener(onClickListener);
        btnvegetarian.setOnClickListener(onClickListener);
        btnvegan.setOnClickListener(onClickListener);
    }

}

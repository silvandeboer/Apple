<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Recipe"
    tools:showIn="@layout/activity_recipe"
    android:background="#ffb7b7"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="atlas.apple.Recipe$PlaceholderFragment"
    android:background="#ffb7b7"
    >



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleRecipe"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ee6060"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:autoText="false"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imageRecipe"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/titleRecipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/imagerecipe"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shortDescriptionRecipe"
        android:id="@+id/description"
        android:background="#ee6060"
        android:layout_below="@+id/imageRecipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationTitle"
        android:id="@+id/informationTitle"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="#ff0000"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationList"
        android:id="@+id/information"
        android:layout_below="@+id/informationTitle"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/environmentBtn"
        android:layout_below="@id/informationTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_help"
        android:layout_marginTop="3dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/waterBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/environmentBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/carbonBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/waterBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/timeBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/carbonBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/difficultyBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/timeBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/priceBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/difficultyBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ratingBtn"
        android:src="@android:drawable/ic_menu_help"
        android:layout_below="@+id/priceBtn"
        android:layout_alignRight="@id/information"
        android:layout_alignEnd="@id/information"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredientsTitle"
        android:id="@+id/ingredientsTitle"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="#ff0000"
        android:layout_toStartOf="@+id/ratingBtn"
        android:layout_toLeftOf="@+id/ratingBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/information"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:id="@+id/ingredients"
        android:layout_below="@+id/ingredientsTitle"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructionsTitle"
        android:id="@+id/instructionsTitle"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="#ff0000"
        android:layout_below="@id/ingredients"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructions"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/instructionsTitle" />





    <!--NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_toLeftOf="@+id/ratingBtn"
        android:layout_toStartOf="@+id/ratingBtn"
        android:layout_below="@+id/ingredientsTitleTextview"
        android:layout_above="@+id/instructionsTitleTextView"
        android:baselineAligned="false"
        android:showDividers="middle" /-->






</RelativeLayout>

</ScrollView>

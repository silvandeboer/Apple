<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.customTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="stylecarbonbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/carbonfactories</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="styleenvironmentbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/environmenttrees</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="styledifficultybar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/difficultysigns</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="styletimebar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/timeclocks</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="stylepricebar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/pricecoins</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="stylewaterbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/waterdroplets</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

</resources>
